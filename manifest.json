{
    "name": "MasterFilmesHD",
    "version": "1.0.0",
    "description": "FUCK YEAH",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/watch?*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "permissions" : ["bookmarks"],
    "icons": {
        "16": "Icon.png",
        "48": "Icon.png",
        "128": "Icon.png"
    },
    "browser_action": {
        "default_title": "MasterFilmesHD",
        "default_popup": "popup.html",
        "matches": ["https://*.youtube.com/watch?*"]
    },
    "web_accessible_resources": ["script.js"]
}